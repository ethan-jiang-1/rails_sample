<% if signed_in? %>
<table class="table" summary="For signed-in users" >
	<tr>
		<td class="main" rows="9">
			<h1 class="micropost">What's up?</h1>
			<%= render 'shared/micropost_form' %>
		</td>
		<td class="sidebar round" rows="3">
			<%= render 'shared/user_info' %>
			<%= render 'shared/stats' %>
		</td>
	</tr>
</table>
<table class="table table-striped" summary="For signed-in users" rows="10">
	<tr>
		<td class="main" rows="10">
			<%= render 'shared/feed' %>
		</td>
	</tr>
</table>
<% else %>
<h1>Sample App</h1>
<p>
This is the home page for the
<a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
sample application.
</p>
<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>
